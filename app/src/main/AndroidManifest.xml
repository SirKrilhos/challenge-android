<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.leonardotoniolo.olodjinha">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/nav_image"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/nav_image_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.leonardotoniolo.olodjinha.view.activities.detalhesProduto.DetalhesProdActivity"
                android:label="@string/title_activity_detalhes_prod"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name="com.leonardotoniolo.olodjinha.view.activities.categoria.CategoriaActivity"
                android:label="@string/title_activity_categoria"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name="com.leonardotoniolo.olodjinha.view.activities.main.MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>